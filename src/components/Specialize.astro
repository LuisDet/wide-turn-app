---
import ManufactureIcon from "./svg/ManufactureIcon.astro";
import PillIcon from "./svg/PillIcon.astro";
import StethoscopeIcon from "./svg/StethoscopeIcon.astro";
// import ModernFleetIcon from "./svg/ModernFleetIcon.astro";
import ModernFleetIcon from "./svg/transparent/ModernFleetIcon.astro";
// import SafeFirstIcon from "./svg/SafeFirstIcon.astro";
import SafeFirstIcon from "./svg/transparent/SafeFirstIcon.astro";
// import FasterIcon from "./svg/FasterIcon.astro";
import FasterIcon from "./svg/transparent/FasterIcon.astro";
// import SatisfiedCustomerIcon from "./svg/SatisfiedCustomerIcon.astro";
import SatisfiedCustomerIcon from "./svg/transparent/SatisfiedCustomerIcon.astro";
// import InsuredCargoIcon from "./svg/InsuredCargoIcon.astro";
import InsuredCargoIcon from "./svg/transparent/InsuredCargoIcon.astro";
// import PriorityIcon from "./svg/PriorityIcon.astro";
import PriorityIcon from "./svg/transparent/PriorityIcon.astro";
import SameDayIcon from "./svg/SameDayIcon.astro";
import ChoiceCard from "./card/ChoiceCard.astro";
// import LocationIcon from "./svg/LocationIcon.astro";
import LocationIcon from "./svg/transparent/LocationIcon.astro";

import Van from "../assets/bg-2.webp";
import { getImage } from "astro:assets";
import PackageIcon from "./svg/PackageIcon.astro";
import TitleText from "./header/TitleText.astro";

const bestChoice = [
  { component: ModernFleetIcon, text: "MODERN FLEET" },
  { component: SafeFirstIcon, text: "SAFETY OPS" },
  { component: FasterIcon, text: "FASTER DELIVERY" },
  { component: SatisfiedCustomerIcon, text: "TAILORED SERVICE" },
  { component: InsuredCargoIcon, text: "CARGO INSURED" },
  { component: PriorityIcon, text: "URGENCY" },
  { component: SameDayIcon, text: "SAME DAY" },
  { component: LocationIcon, text: "LOAD TRACKING" },
];

const bgImage = await getImage({ src: Van, format: "webp" });
---

<>
  <section>
    <div class="bg-2" style={`background-image: url(${bgImage.src});`}></div>
    <div class="wrapper">
      <div class="choice-section">
        <TitleText title="YOUR BEST CHOICE, EVERY TIME" color="white" />
        <div class="choise-container">
          {
            bestChoice.map((i) => (
              <ChoiceCard SourceMap={i.component} text={i.text} />
            ))
          }
        </div>
      </div>
      <div class="serve-section">
        <TitleText title="INDUSTRIES WE SERVE" color="white" />
        <div class="card-container">
          <div class="card">
            <StethoscopeIcon width="40" fill="#FCB900" />
            <!-- <img src="src/assets/flexibility.svg" alt="" width="100" /> -->
            <p class="card-info">HealthCare</p>
          </div>
          <div class="card">
            <PillIcon width="40" fill="#FCB900" />
            <!-- <img src="src/assets/flexibility.svg" alt="" width="100" /> -->
            <p class="card-info">Medical</p>
          </div>
          <div class="card">
            <ManufactureIcon width="40" fill="#FCB900" />
            <!-- <img src="src/assets/flexibility.svg" alt="" width="100" /> -->
            <p class="card-info">Manufacturing</p>
          </div>
          <div class="card">
            <PackageIcon width="40" fill="#FCB900" />
            <!-- <img src="src/assets/flexibility.svg" alt="" width="100" /> -->
            <p class="card-info">General Goods</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</>

<style>
  .choice-section {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 60px;
  }

  .choise-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
    max-width: 1000px;
  }

  .serve-section {
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .bg-2 {
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    width: 100%;
    max-height: 100%;
    height: 900px;
    position: absolute;
    z-index: -1;
  }
  .card-info {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    text-align: center;
  }
  .card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    padding-inline: 10px;
    padding-block: 10px;
    background-color: white;
    border-radius: 10px;
    grid-column: span 2;
    width: 100%;
    /* border: 1px solid #ccc; */
  }
  .card-container {
    /* width: 700px; */
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    column-gap: 30px;
    row-gap: 10px;
    justify-items: center;
  }

  .wrapper {
    margin-inline: 20px;
    padding-block: 40px;
    display: flex;
    flex-direction: column;
    gap: 60px;
    width: 100%;
  }
  section {
    display: flex;
    justify-content: end;
    position: relative;
  }
  @media screen and (min-width: 800px) {
    .card-container {
      grid-template-columns: repeat(4, 1fr);
      column-gap: 20px;
    }
    .wrapper {
      margin-inline: 60px;
      gap: 20px;
    }
    .card {
      max-width: 300px;
    }
  }
  @media screen and (min-width: 1000px) {
    .wrapper {
      max-width: 50%;
    }

    .card {
      max-width: 230px;
    }
  }
  @media screen and (min-width: 1200px) {
    .wrapper {
      margin-inline: 100px;
    }
    .card {
      /* padding-inline: 30px; */
      max-width: 300px;
    }
  }

  @media screen and (min-width: 1600px) {
    .wrapper {
      padding-block: 100px;
      gap: 50px;
    }
    .card {
      max-width: 400px;
    }
  }

  @media screen and (min-width: 2200px) {
    .wrapper {
      padding-block: 100px;
      gap: 100px;
    }
    .card {
      flex: 1;
      grid-column: span 1;
      max-width: 250px;
    }
  }
</style>
