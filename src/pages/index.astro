---
import Layout from "../layouts/Layout.astro";
import {
  Header,
  Services,
  Specialize,
  About,
  SpecialCare,
  Quote,
  Footer,
} from "@sections/home";
import "../global.css";
---

<Layout>
  <Header />
  <Services />
  <Specialize />
  <About />
  <SpecialCare />
  <Quote />
  <Footer />
</Layout>

<style>
  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    background-color: #f6f6f6;
  }
  html {
    scroll-behavior: smooth;
    font-family: "ITC Avant Garde Gothic Pro Book", sans-serif;
  }
</style>
