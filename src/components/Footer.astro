<style>
  footer {
    padding-block: 32px;
    color: white;
    background-color: #282828;
    padding-inline: 10vw;
  }

  h3 {
    font-family: "ITC Avant Garde Gothic Pro Bold", sans-serif;
    font-size: 20px;
    font-weight: bold;
    position: relative;
  }

  h3::before {
    content: "";
    width: 20%;
    height: 3px;
    position: absolute;
    background-color: #fcb900;
    bottom: -30%;
  }

  p {
    font-size: 16px;
  }

  .info-container {
    display: flex;
    flex-direction: column;
  }
  @media screen and (min-width: 800px) {
    .info-container {
      column-gap: 30px;
      flex-direction: row;
    }
  }

  .info-card {
    max-width: 350px;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 30px;
  }
  @media screen and (min-width: 1200px) {
    .container {
      flex-direction: row;
      justify-content: space-evenly;
    }
  }
  .cpr {
    text-align: center;
  }
</style>
