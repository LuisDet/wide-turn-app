---
import EmailIcon from "./svg/EmailIcon.astro";
---

<>
  <section id="Quote">
    <div class="container">
      <div class="info-container">
        <h2>LET'S CONNECT</h2>
        <p>
          We'd love to hear from you! Whether you have a question, need
          assistance, or just want to schedule or expedite your load.
          <br />
          <br />
          Feel free to reach out. Our team is here to help you deliver your freight
          on same day and satisfy your customers needs.
          <br />
          <br />
          Send us an email sharing the load's details including Zip Code (From -
          To), Weight, Pieces and any Special Care.
        </p>
        <a href="mailto:info@wideturnlogistics.com" class="email">
          <EmailIcon width="30" height="30" fill="white" />
          info@wideturnlogistics.com
        </a>
      </div>
      <div class="form-container">
        <p>
          Alternatively, you can fill out the form below, and we'll get back to
          you as soon as possible to start working on a quote together.
        </p>
        <form id="form">
          <input
            type="hidden"
            name="access_key"
            value="2303e22c-101f-410c-acde-aafb0b7f19e6"
          />

          <div class="input-container">
            <fieldset>
              <label for="name">Name</label>
              <input type="text" name="name" />
            </fieldset>
            <fieldset>
              <label for="emil">Email</label>
              <input type="email" name="emil" />
            </fieldset>
            <fieldset>
              <label for="phone">Phone</label>
              <input type="tel" name="phone" />
            </fieldset>
            <fieldset>
              <label for="services">Service</label>
              <input
                type="text"
                name="services"
                value="Expedited"
                placeholder="Expedited"
                disabled
              />
            </fieldset>
          </div>
          <fieldset class="fieldset-textarea">
            <label for="description">How can we Help?</label>
            <textarea name="description" id="description"></textarea>
          </fieldset>
          <button> Send </button>
        </form>
      </div>
    </div>
    <dialog id="favDialog"></dialog>
  </section>
  <script is:inline>
    const form = document.getElementById("form");
    const $checkForm = document.querySelector("dotlottie-player");
    const $favDialog = document.getElementById("favDialog");
    // const result = document.getElementById('result');

    const text = `<dotlottie-player
        src="https://lottie.host/53a5e3ef-072e-4598-b8c4-2a2ff7fb4576/cTtXst3cWS.lottie"
        background="transparent"
        speed="0.5"
        style="width: 300px; height: 300px"
        direction="1"
        playMode="forward"
        autoplay
        id="check-form"></dotlottie-player>`;

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      const formData = new FormData(form);

      // Get the name input value
      const name = formData.get("name");

      // Create a custom subject
      const subject = `${name} sent a message from website`;

      // Append the custom subject to the form data
      formData.append("subject", subject);

      const object = Object.fromEntries(formData);
      const json = JSON.stringify(object);
      // result.innerHTML = "Please wait...";

      fetch("https://api.web3forms.com/submit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Accept: "application/json",
        },
        body: json,
      })
        .then(async (response) => {
          let json = await response.json();
          if (response.status == 200) {
            console.log(json.message);
            // result.innerHTML = json.message;
          } else {
            console.log(response);
            // result.innerHTML = json.message;
          }
        })
        .catch((error) => {
          console.log(error);
          // result.innerHTML = "Something went wrong!";
        })
        .then(function () {
          form.reset();
          $favDialog.showModal();
          $favDialog.innerHTML = text;
          setTimeout(() => {
            $favDialog.close();
          }, 2000);
        });
    });
  </script>
  <style>
    dialog {
      border: none;
      background-color: transparent;
    }
    dialog::backdrop {
      background-color: hsl(202, 78%, 33%, 80%);
    }
    .email {
      /*   */
      background-color: #136797;
      padding: 10px;
      border-radius: 10px;
    }
    .info-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      max-width: 100%;
      row-gap: 30px;
    }
    .container {
      display: flex;
      flex-direction: column;
      gap: 30px;
    }
    .info-container a {
      color: white;
      font-size: clamp(16px, 2vw, 28px);
      text-decoration: none;
      align-self: flex-start;
      display: flex;
      padding-inline: 20px;
      column-gap: 15px;
    }
    .info-container h2 {
      margin-bottom: 40px;
    }
    p {
      color: white;
      font-size: clamp(16px, 2vw, 28px);
      margin: 0;
    }
    button:hover {
      filter: brightness(110%);
    }
    button {
      font-size: 40px;
      font-size: 24px;
      background-color: #fcb900;
      border: 1px solid #ebad00;
      border-radius: 10px;
      color: white;
      font-weight: 600;
      padding-block: 15px;
      cursor: pointer;
    }
    input:disabled {
      background-color: #ccc;
    }

    input[type="text"],
    input[type="email"],
    input[type="tel"],
    textarea {
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
      font-family: inherit;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="tel"]:focus,
    textarea:focus {
      outline: 3px solid #fcb900;
    }
    label {
      color: white;
      font-weight: 600;
      font-size: clamp(18px, 1vw, 24px);
    }
    fieldset {
      display: flex;
      flex-direction: column;
      gap: 5px;
      border: none;
      padding: 0;
    }
    .input-container {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 20px;
      /* max-width: 900px; */
      width: 100%;
    }
    h2 {
      font-family: "ITC Avant Garde Gothic Pro Bold", sans-serif;
      font-size: 36px;
      font-weight: 800;
      color: white;
      /* text-align: center; */
      margin: 0;
      margin-bottom: 40px;
    }

    .form-container {
      width: 100%;
      display: flex;
      flex-direction: column;
      row-gap: 80px;
    }

    section {
      background-color: #1171a7;
      padding-inline: 20px;
      padding-block: 100px;
    }
    @media screen and (min-width: 800px) {
      .input-container {
        flex-direction: row;
        flex-wrap: wrap;
      }
      fieldset {
        width: calc(50% - 20px);
      }
      .fieldset-textarea {
        width: 100%;
      }
      section {
        padding-inline: 60px;
      }
      h2 {
        font-size: 48px;
      }
    }
    @media screen and (min-width: 1000px) {
      .info-container {
        max-width: 45%;
      }
      h2 {
        font-size: 56px;
      }
      .container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        column-gap: 50px;
      }
      fieldset {
        width: calc(50% - 15px);
      }
      .form-container {
        max-width: 1000px;
      }
      .info-container {
        max-width: 1000px;
      }
    }
    @media screen and (min-width: 1800px) {
      h2 {
        font-size: 64px;
      }
      section {
        padding-inline: 120px;
      }
      .container {
        column-gap: 100px;
      }
    }
  </style>
</>
