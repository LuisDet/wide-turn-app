---
import HeroImage from "@assets/van-hero.webp";
import fmcsaSVG from "@assets/fmcsa.svg";
import NavBar from "@components/NavBar/NavBar.astro";
import { getImage } from "astro:assets";
const bgImage = await getImage({ src: HeroImage, format: "webp" });
---

<>
  <header id="Home">
    <NavBar />
    <div class="hero">
      <div class="text-hero">
        <h1>WE HAVE THE SOLUTION TO YOUR FREIGHT CHALLENGES</h1>
        <a href="#Services">OUR SERVICES</a>
      </div>
      <img src={fmcsaSVG.src} alt="" class="fmcsa-logo" />
      <div class="bg-image" style={`background-image: url(${bgImage.src});`}>
      </div>
    </div>
  </header>

  <style>
    .bg-image {
      width: 100%;
      height: 100%;
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
    }
    .hero {
      height: 100dvh;
      width: 100%;
      position: relative;
    }

    .image-container {
      height: 100vh;
      width: 100%;
      background-color: hsla(202, 82%, 36%, 70%);
    }

    /* .hero_image {
      position: absolute;
      height: 100vh;
      object-fit: cover;
      z-index: -1;
      right: -50%;
    } */
    .text-hero {
      position: absolute;
      top: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
      transform: translateY(-30%);
      gap: 40px;
      width: 100%;
    }
    .text-hero > h1 {
      font-family: "ITC Avant Garde Gothic Pro Bold", sans-serif;
      font-size: clamp(36px, 4.2vw, 102px);
      color: white;
      text-align: center;
      font-weight: 800;
      margin: 0;
      max-width: 80vw;
    }

    .text-hero > a {
      font-family: inherit;
      color: white;
      font-size: 18px;
      padding-inline: 30px;
      padding-block: 15px;
      background-color: #fcb900;
      text-decoration: none;
      border-radius: 10px;
      font-weight: 700;
      text-align: center;
      flex: 1;
    }

    .fmcsa-logo {
      width: 180px;
      height: 150px;
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
    }

    header {
      display: flex;
      flex-direction: column;
      max-height: 100vh;
      height: 100%;
      position: relative;
      overflow: hidden;
    }
    @media screen and (min-width: 800px) {
      .fmcsa-logo {
        transform: none;
        width: 250px;
        height: 150px;
        left: 10%;
        bottom: 5%;
      }

      /* .hero_image {
        position: absolute;
        height: 100vh;
        object-fit: cover;
        z-index: -1;
        right: -12%;
      } */
      .text-hero {
        top: 50%;
        transform: translateY(-50%);
      }

      .text-hero > a {
        font-size: 24px;
        max-width: 400px;
      }
    }

    @media screen and (min-width: 1000px) {
      /* .hero_image {
        position: absolute;
        height: 100vh;
        object-fit: cover;
        z-index: -1;
      } */
      .text-hero {
        gap: 20px;
        align-items: normal;
        left: 10%;
      }
      .text-hero h1 {
        text-align: start;
        max-width: 60%;
      }
    }

    /* @media screen and (min-width: 1000px) {
      .hero_image {
        right: 0;
        width: 100%;
        height: auto;
      }
    } */

    @media screen and (min-width: 1800px) {
      .text-hero > h1 {
        max-width: 75%;
      }

      .text-hero > a {
        font-size: 32px;
        max-width: 400px;
      }

      .logo {
        width: 140px;
      }

      .text-hero {
        gap: 60px;
      }
    }
  </style>
</>
