---
const { SourceMap, text } = Astro.props;
---

<div class="choise-card">
  <SourceMap heigth="40" fill="#fff" />
  <p>{text}</p>
</div>

<style>
  .choise-card p {
    color: #fff;
    font-size: clamp(12px, 1.8vw, 18px);
    text-align: center;
  }
  .choise-card {
    display: flex;
    gap: 5px;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
</style>
